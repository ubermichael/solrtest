  <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
          <tr>
              <th>ID</th>                                       <th>Name</th>
                                                         <th>Label</th>
                                                         <th>Description</th>
                  
          </tr>
      </thead>
      <tbody>
      {% for role in roles %}
          <tr>
              <td>
                  <a href="{{ path('role_show', { 'id': role.id }) }}">
                      {{ role.id }}
                  </a>
              </td>
              <td>
                  {{ role.name }}
              </td>
          
              <td>
                  {{ role.label }}
              </td>
          
              <td>
                  {{ role.description|raw }}
              </td>
          
          </tr>
      {% endfor %}
      </tbody>
  </table>
  