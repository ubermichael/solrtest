{% extends 'base.html.twig' %}

{% block title %}Role List{% endblock %}

{% block pageheader %}
    <h1>Role List</h1>
    <p class="count">
        Displaying {{ roles|length }} roles of {{ roles.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('role_new') }}" class="btn btn-default"> <span class="glyphicon glyphicon-plus"></span>
                    New </a>
            {% endif %}

            <a href="{{ path('role_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'role/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(roles) }}
    </div>

{% endblock %}
