{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

 {% block pageheader %}
     <h1>Search</h1>
 {% endblock %}

{% block body %}

    <form method="get" action="{{ path('solr') }}" class="form-horizontal">
        <div class='row'>
            <div class='col-sm-12'>
                <fieldset>
                    <div class='form-group'>
                        <label class='col-sm-2 control-label' for='q'>Search term</label>
                        <div class='col-sm-10'>
                            <div class='input-group'>
                                <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id='btn-search' type="submit">
                                        <span class='glyphicon glyphicon-search'></span>
                                        Search
                                    </button>
                                    {% if q %}
                                        <a class="btn btn-warning" href='{{ path('solr') }}'>
                                            <span class='glyphicon glyphicon-refresh'></span>
                                                Reset
                                        </a>
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class='row'>
            <div class='col-sm-3'>
                {% if result %}
                    {% include 'solr/partial/facet.html.twig' with {
                        'facet': result.getFacet('type'),
                        'filter': 'type',
                        'header': 'Record Type'
                    } %}

                    {% include 'solr/partial/facet.html.twig' with {
                        'facet': result.getFacet('genres'),
                        'filter': 'genres',
                        'header': 'Genre'
                    } %}
                {% endif %}
            </div>
            <div class='col-sm-9'>
                {% if result and result.count > 0 %}
                    {% set pagination = result.paginator %}
                    {% if pagination %}
                        {% set pageData = pagination.getPaginationData %}
                        <h3>Results</h3>
                        <p class="count">
                            Found {{ pagination.getTotalItemCount }} results. Showing
                            page {{ pagination.getCurrentPageNumber }}
                            of {{ pagination.getPageCount }}
                            with results from {{ pageData.firstItemNumber }} to {{ pageData.lastItemNumber }}.
                        </p>
                    {% endif %}

                    <div class='list-group'>
                        {% for i in 0..(result.count-1) %}
                            {% set document = result.getDocument(i) %}
                            {% set entity = result.entity(i) %}
                            <a href='{{ entity_linker.link(entity) }}' class='list-group-item'> <b>{{ document.type_s }}
                                    : {{ entity }}</b><br />
                                {% for h in result.getHighlighting(i) %}
                                    {{ h|join("...")|raw }}
                                {% endfor %}
                            </a>
                        {% endfor %}
                    </div>

                    {% if pagination %}
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </form>

{% endblock %}
