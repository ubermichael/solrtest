<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Sortable Name</th>
            <th>Gender</th>
            <th>Canadian</th>
            <th>Description</th>
            <th>Notes</th>
            <th>Url Links</th>

        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.id }}
                    </a>
                </td>
                <td>
                    {{ person.fullName }}
                </td>

                <td>
                    {{ person.sortableName }}
                </td>

                <td>
                    {{ person.gender }}
                </td>

                <td>{% if person.canadian %}Yes{% else %}No{% endif %}</td>


                <td>
                    {{ person.description|raw }}
                </td>

                <td>
                    {{ person.notes|raw }}
                </td>

                <td>{% if person.urlLinks %}{{ person.urlLinks|join(', ') }}{% endif %}</td>

            </tr>
        {% endfor %}
    </tbody>
</table>
