{% extends 'base.html.twig' %}

{% block title %}Book Details {% endblock %}

 {% block pageheader %} 
    <h1>Book Details</h1>
 {% endblock %} 

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('book_edit', {'id': book.id }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </div>
        <div class='btn-group'>
            <form class='delete-form' method="post" action="{{ path('book_delete', {'id': book.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ book.id) }}">
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        </div>
    </div>
    {% endif %}

    {% embed 'book/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}
